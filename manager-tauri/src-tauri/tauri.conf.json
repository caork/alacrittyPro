{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Alacritty Manager",
  "version": "0.1.0",
  "identifier": "com.alacritty.manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "",
        "width": 1280,
        "height": 820,
        "minWidth": 980,
        "minHeight": 640,
        "transparent": true,
        "decorations": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"]
  }
}
